#include <iostream>
using namespace std;

int main() {
	//code
	int t;
	cin>>t;
	for(int i=0;i<t;++i)
	{
	    int m,n,q,ans,ans1;
	    cin>>n>>m;
	    q=n/m;
	    ans=q*m;
	    if((n*m)>0)
	    {
	      ans1=(q+1)*m;
	    }
	    else
	    {
	        ans1=(q-1)*m;
	    }
	    
	    if(abs(n-ans)<abs(n-ans1))
	    {
	        cout<<ans<<"\n";
	    }
	    else
	    {
	        cout<<ans1<<"\n";
	    }
	   /* for(int j=0;j<n;++j)
	    {
	        if(m%n==0)
	        {
	            cout<<m<<"\n";
	            break;
	        }
	        m--;
	    }*/
	        //cout<<ans<<"\n";
	}
	return 0;
}
